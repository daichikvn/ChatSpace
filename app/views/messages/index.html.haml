.chat-side
  .chat-side__header
    .chat-side__header__box
      .chat-side__header__box--title
        test-user
      .chat-side__header__box--icons
        = link_to root_path, class: "chat-side__header__box--icons--icon" do
          %i.fa.fa-edit
        = link_to root_path, class: "chat-side__header__box--icons--icon" do
          %i.fa.fa-cog

  .chat-side__body
    = render "groups"

.chat-main
  .chat-main__header
    .chat-main__header__left-box
      .chat-main__header__left-box--title
        test-group
